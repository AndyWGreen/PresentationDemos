@{
  ViewBag.Title = "Contact Us";
}
@section scripts{
  <script src="~/node_modules/vue/dist/vue.js"></script>
  <script src="~/js/contact.js"></script>
}
<div class="row">
  <div class="col-lg-6 offset-lg-3">
    <div class="card p-3" id="theForm">
      <form novalidate v-on:submit.prevent="onSave()">
        <div class="form-group">
          <label for="firstName">First Name</label>
          <input type="text" id="firstName" name="firstName" class="form-control" v-model="message.firstName" />
          <span class="text-error"></span>
        </div>
        <div class="form-group">
          <label for="lastName">Last Name</label>
          <input type="text" id="lastName" name="lastName" class="form-control" v-model="message.lastName"                 />
          <span class="text-error"></span>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input id="email" name="email" type="email" class="form-control"v-model="message.email"  />
          <span class="text-error"></span>
        </div>
        <div class="form-group">
          <label for="subject">Subject</label>
          <select id="subject" name="subject" class="form-control" v-model="message.subject" >
            <option selected>(Pick One)</option>
            <option>About the Bed and Breakfast</option>
            <option>Room Rates</option>
            <option>Questions about the Area</option>
            <option>Availablity</option>
          </select>
          <span class="text-error"></span>
        </div>
        <div class="form-group">
          <label for="message">Message</label>
          <textarea rows="4" id="message" v-model="message.message" name="message" class="form-control"></textarea>
          <span class="text-error"></span>
        </div>
        <div class="form-group">
          <input type="submit" class="btn btn-success" value="Add" />
          <a asp-controller="Root" asp-action="Index" class="btn btn-outline-dark">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</div>
