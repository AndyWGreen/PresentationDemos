@model IEnumerable<Room>
@section Scripts {
  <script src="~/node_modules/vue/dist/vue.min.js"></script>
  <script src="~/js/waitCursor.js"></script>
  <script src="~/node_modules/axios/dist/axios.min.js"></script>
  <script src="~/js/index.js"></script>
}
<div id="theApp">
  <div>
    {{ name }}
    {{ eventDate | date }}
  </div>
  <div><button class="btn btn-success" v-on:click="addNew()">Add New</button></div>
  <wait-cursor msg="Please Wait..." :busy="isBusy"></wait-cursor>
  <div class="row">
    <div class="col-md-4" v-for="r in rooms">
      <div class="card">
        <img class="card-img" :src="r.images[0].url" />
        <div class="card-body">
          <h4 class="card-title">{{ r.title }}</h4>
          <p class="card-text">{{ r.description }}</p>
          <ul class="list-unstyled">
            <li><strong><i class="fas fa-male"></i> Max Guests:</strong> {{ r.maxGuests }}</li>
            <li><strong><i class="fas fa-money-bill-alt"></i> Price:</strong> ${{ r.rate }}</li>
          </ul>
        </div>
        <div class="card-footer">
          <div class="float-right">
            <button class="btn btn-sm btn-success">Book Now</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
